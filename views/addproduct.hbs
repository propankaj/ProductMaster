    <title>Add Product Page</title>
</head>

<body>
    <div class="container" style="margin-top: 10%;">
        <h3><b>ADD PRODUCT</b></h3>
        <br />
        <form action="/addProduct" method="POST">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Product Name</label>
                    <input type="text" name="productname" class="form-control" id="inputEmail4"
                        placeholder="Product Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Product Price</label>
                    <input type="text" name="productprice" class="form-control" id="inputEmail4"
                        placeholder="Product Price" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Stock</label>
                    <input type="text" name="stock" class="form-control" id="inputEmail4"
                        placeholder="Stock" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Product Description</label>
                    <input type="text" name="productdescription" class="form-control" id="inputEmail4"
                        placeholder="Product Description" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Product Image</label>
                    <input type="file" name="productimage" class="form-control" id="inputEmail4"
                        placeholder="Product Image" required>
                </div>
            </div>
            <div class="form-row">
                <input type="submit" class="btn btn-primary" value="Add">
            </div>
        </form>
    </div>
</body>

</html>